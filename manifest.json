{
  "manifest_version": 3,
  "name": "Google Maps Button and Minimap Reloaded",
  "version": "1.0.2",
  "description": "Adds a Maps button and makes the map thumbnail clickable on Google pages",
  "host_permissions": ["*://www.google.com/search*"],
  "content_scripts": [
    {
      "matches": ["*://www.google.com/search*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
